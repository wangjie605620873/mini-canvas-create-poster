.list{
  height: 100rpx;
  width: 100%;
  border-top:1rpx solid #eee;
  position: relative;
}
.slide-box{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  z-index: 5;
  background: #fff;
}
.del{
  position: absolute;
  right: 0;
  top:0;
  z-index: 4;
  background: red;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 180rpx;
  height: 100%;
}
 .pot-image{
   width: 80rpx;
   height: 80rpx;
   margin-right: 20rpx;
   margin-left :20rpx;
   border-radius: 50%;
   border:1rpx solid #eee;
   overflow: hidden;
 }
 .pot-image image{
   width: 100%;
   height: 100%;
 }




